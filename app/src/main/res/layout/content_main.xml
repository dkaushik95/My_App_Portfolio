<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dishantkaushik.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#deeaf1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Nanodegree Apps!"
        android:textSize="23sp"
        android:id="@+id/txtmain"
        android:textColor="#22435c"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtmain"
        android:layout_marginTop="30dp"
        android:text="Spotify Streamer"
        android:id="@+id/spotify"
        android:padding="20dp"
        android:layout_alignRight="@+id/capstone"
        android:layout_alignLeft="@id/capstone"
        style="@style/buttonstyle"
        android:onClick="spotifyit"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spotify"
        android:layout_marginTop="10dp"
        android:text="Scores App"
        android:id="@+id/scores"
        android:padding="20dp"
        android:layout_alignRight="@+id/capstone"
        android:layout_alignLeft="@id/capstone"
        style="@style/buttonstyle"
        android:onClick="scoreit"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scores"
        android:layout_marginTop="10dp"
        android:text="Library App"
        android:id="@+id/library"
        android:padding="20dp"
        android:layout_alignRight="@+id/capstone"
        android:layout_alignLeft="@id/capstone"
        style="@style/buttonstyle"
        android:onClick="bookit"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/library"
        android:layout_marginTop="10dp"
        android:text="Build It Bigger"
        android:id="@+id/bib"
        android:layout_alignRight="@+id/capstone"
        android:layout_alignLeft="@id/capstone"
        style="@style/buttonstyle"
        android:onClick="bibit"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bib"
        android:layout_marginTop="10dp"
        android:text="XYZ Reader"
        android:id="@+id/xyz"
        android:padding="20dp"
        android:layout_alignRight="@+id/capstone"
        android:layout_alignLeft="@id/capstone"
        style="@style/buttonstyle"
        android:onClick="xyzit"
        />
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/xyz"
        android:layout_marginTop="10dp"
        android:text="Capstone: My own app"
        android:id="@+id/capstone"
        android:padding="20dp"
        style="@style/buttonred"
        android:onClick="ownit"
        />
</RelativeLayout>
